{{#if posts.length}}
<div class="post-list">

    {{#each posts as |post|}}
    <div class="row mb-2">
        <div class="col-md-8">
            <h4><a href="/api/posts/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div class="col-md-4">
            <h4 data-id="{{post.id}}">{{post.date_created}}</h4>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<div>
    <button id="add-new-btn"><a href="/post">+ New Post</a></button>
</div>