<div class="new-post-body">
    <div class="new-post-container">
        <h2 class="main-color new-post-head">Create New Post</h2>
        <form class="form new-post-form bg-color">
            <div class="form-group input-container">
                <label for="post-title" class="title-label">Title</label>
                <div class="input-title">
                    <input class="form-input" type="text" id="post-title" name="title" />
                </div>
            </div>
            <div class="form-group input-container">
                <label for="post-content" class="content-label">Content</label>
                <div class="input-content">
                    <textarea class="form-input post-content-textarea" id="post-content" name="content"></textarea>
                </div>
            </div>
            <div class="form-group submit-btn-container">
                <button type="submit" class="btn btn-primary submit-btn">Create</button>
            </div>
        </form>
    </div>
    
</div>
<div class="btn-container" id="add-new-post">
    <button id="add-new-btn" class="add-new-btn"><a class="btn-anchor" href="/post">+ New Post</a></button>
</div>

<script src="/js/newPost.js"></script>