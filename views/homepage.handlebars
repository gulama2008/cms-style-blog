<!-- Loop over each object in the post array -->
{{#each posts as |post| }}
    <div class="post-container">
        <div class="post-head main-color">
            <a href="/api/posts/details/{{post.id}}" class="post-title">{{post.title}}</a>
            <p class="post-user">Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
        </div>
        <div class="post-content bg-color">
            {{post.content}}
        </div>
    </div>
{{/each}}