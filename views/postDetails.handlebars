        <div class="">
            <p>
                {{comment.content}}
            </p>
        </div>
        <div class="">
            <p>- {{comment.user.username}} on {{format_date comment.date_created}}</p>
            {{#if isUser}}
            <button>edit</button>
            <button>update</button>
            <button>delete</button>
            {{/if}}
        </div>
    </div>
    {{/each}}


    <div class="">
        <button><a href="/api/posts/{{post.id}}">Add Comment</a></button>
    </div>
</div>

