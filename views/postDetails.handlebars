<div class="post post-container">
    <div class="post-head main-color">
        <a class="post-title" href="/api/posts/{{post.id}}">{{post.title}}</a>
        <p class="post-user">Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="post-content bg-color">
        {{post.content}}
    </div>
</div>
{{#each post.comments as |comment| }}
<div class="comment comment-container">
    <div class="comment-head main-color"></div>
    <div class="comment-body">
        <div class="comment-content">
            {{comment.content}}
        </div>
        <div class="comment-user">
            â€”{{comment.user.username}}, {{format_date comment.date_created}}
