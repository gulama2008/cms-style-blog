<div class="row mb-4 post">
    <div class="">
        <h2>
            <!-- Call helper function with triple brackets to render the emoji span as HTML -->
            {{post.title}}
        </h2>
        <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="">
        <p>
            {{post.content}}
        </p>
    </div>
</div>
<form class="form add-comment-form">
    <div class="form-group">
        <label for="comment-content">Comment</label>
        <textarea class="form-input" id="comment-content" name="content">{{post.content}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="comment-btn" data-id="{{post.id}}" user-id="{{user_id}}">Submit</button>
    </div>
</form>

