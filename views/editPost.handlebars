<h3>Edit Post</h3>

<form class="form edit-post-form">
    <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-input" type="text" id="post-title" name="title" value="{{post.title}}"/>
    </div>

    <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-input" id="post-content" name="content">{{post.content}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="update-btn" data-id="{{post.id}}">Update Post</button>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" id="delete-btn" data-id="{{post.id}}">Delete</button>
    </div>
</form>

<div>
    <button id="add-new-btn"><a href="/post">+ New Post</a></button>
</div>

<script src="/js/editPost.js"></script>