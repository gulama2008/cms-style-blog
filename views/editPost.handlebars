<div class="edit-post-body">
    <div class="edit-post-container">
        <h2 class="main-color edit-post-head">Edit Post</h2>
        <form class="form edit-post-form bg-color">
            <div class="form-group input-container">
                <label for="post-title" class="title-label">Title</label>
                <div class="input-title">
                    <input class="form-input" type="text" id="post-title" name="title" value="{{post.title}}" />
                </div>
            </div>
            <div class="form-group input-container">
                <label for="post-content" class="content-label">Content</label>
                <div class="input-content">
                    <textarea class="form-input post-content-textarea" id="post-content" name="content">{{post.content}}</textarea>
                </div>
            </div>
            <div class="form-group submit-btn-container">
                <button type="submit" class="btn btn-primary submit-btn" id="update-btn" data-id="{{post.id}}">Update Post</button>
            </div>
            <div class="form-group submit-btn-container">
                <button type="submit" class="btn btn-primary submit-btn" id="delete-btn" data-id="{{post.id}}">Delete</button>
            </div>
        </form>
        
